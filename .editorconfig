# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
tab_width = 4
max_line_length = 80

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
